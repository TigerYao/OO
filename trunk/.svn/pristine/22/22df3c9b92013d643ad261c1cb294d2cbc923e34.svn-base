<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/include_title_normal" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <View style="@style/line_horizontal_gray"
              android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/no_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/no"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_fense_normal"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_42"
            android:paddingRight="@dimen/dp_42"/>
        <TextView
            android:id="@+id/yes_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/yes"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_fense_normal"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_42"
            android:paddingRight="@dimen/dp_42"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_marginTop="@dimen/dp_12"
                android:textStyle="bold"
                android:text="@string/deposite"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_marginTop="@dimen/dp_12"
                android:textStyle="bold"
                android:text="@string/pay_deposit_tips1"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/pay_deposit_tips2"
                android:textSize="@dimen/sp_16"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/money_qian_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="150"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/money_fuhao_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/money_qian_txt"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="X"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/money_feilv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/money_fuhao_txt"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="30%"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:id="@+id/money_hou_txt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="150"
                    android:textSize="@dimen/sp_16"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/money_gbp_qian_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_title_normal"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="150"
                    android:textSize="@dimen/sp_16"/>


                <TextView
                    android:id="@+id/money_gbp_hou_txt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_title_normal"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="150"
                    android:textSize="@dimen/sp_16"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/total_gbp"
                    android:textSize="@dimen/sp_16"/>


                <TextView
                    android:id="@+id/total_gbp_money_txt"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="150"
                    android:textSize="@dimen/sp_16"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_marginTop="@dimen/dp_28"
                android:text="@string/pay_deposit_tips3"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>