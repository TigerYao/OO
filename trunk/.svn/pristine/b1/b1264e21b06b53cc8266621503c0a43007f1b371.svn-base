<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:paddingLeft="@dimen/layout_marginLeft"
              android:paddingRight="@dimen/layout_marginRight"
              android:layout_height="176dp">
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:divider="@color/base_line_color"
        android:dividerHeight="1px"
        android:listSelector="@null">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/language01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:gravity="center"
            android:background="@drawable/btn_border_white"
            android:text="@string/select_language_01"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/language02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:gravity="center"
            android:background="@drawable/btn_border_white"
            android:text="@string/select_language_02"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/language03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:gravity="center"
            android:background="@drawable/btn_border_white"
            android:text="@string/select_language_03"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/language04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:gravity="center"
            android:background="@drawable/btn_border_white"
            android:text="@string/select_language_04"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
    </LinearLayout>

</LinearLayout>