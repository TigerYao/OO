<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FF4B494C"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/login_title"
        android:textColor="#FFFFFFFF"
        android:textSize="30sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_height"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/layout_marginLeft"
        android:layout_marginRight="@dimen/layout_marginRight"
        >
        <RelativeLayout
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_login"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/login_item_size"
                />
            <ImageView
                android:id="@+id/login_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/image_login_icon_left"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sign_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_title"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/login_item_size"
                />
            <ImageView
                android:id="@+id/sign_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/image_signup_icon"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_border_white">
            <TextView
                android:id="@+id/login_phone_type"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="+86"
                android:gravity="center"
                android:textSize="@dimen/login_item_size"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:textColorHint="@color/login_tip_color"
                android:textColor="@color/white"
                android:textSize="@dimen/login_item_size"
                android:hint="@string/login_phone_tip"
                android:inputType="number"
                android:layout_alignBaseline="@+id/login_phone_type"
                android:layout_alignBottom="@+id/login_phone_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/login_psw"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textColorHint="@color/login_tip_color"
            android:inputType="textPassword"
            android:textSize="@dimen/login_item_size"
            android:hint="@string/register_compwd_tip"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="120dp"
            android:layout_height="@dimen/login_item_height"
            android:gravity="center"
            android:layout_marginTop="95dp"
            android:layout_gravity="center"
            android:textSize="@dimen/login_btn_size"
            android:background="@drawable/image_login_button"
            android:textColor="#FFFFFFFF"
            android:text="@string/login_login"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <EditText
            android:id="@+id/sign_inviter"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textColorHint="@color/login_tip_color"
            android:textSize="@dimen/login_item_size"
            android:hint="@string/register_inviter_tip"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white">
            <TextView
                android:id="@+id/sign_phone_type"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="+86"
                android:gravity="center"
                android:textSize="@dimen/login_item_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/sign_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textColor="@color/white"
                android:textSize="@dimen/login_item_size"
                android:inputType="number"
                android:textColorHint="@color/login_tip_color"
                android:hint="@string/register_phone_tip"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/sign_psw"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textColorHint="@color/login_tip_color"
            android:inputType="textPassword"
            android:textSize="@dimen/login_item_size"
            android:hint="@string/register_pwd_tip"/>
        <EditText
            android:id="@+id/sign_con_psw"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textColorHint="@color/login_tip_color"
            android:inputType="textPassword"
            android:textSize="@dimen/login_item_size"
            android:hint="@string/register_compwd_tip"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/login_item_margin_top"
            android:layout_marginLeft="@dimen/layout_marginLeft"
            android:layout_marginRight="@dimen/layout_marginRight"
            android:layout_height="@dimen/login_item_height"
            android:background="@drawable/btn_border_white">
            <TextView
                android:id="@+id/sign_get_code"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/register_vcode"
                android:gravity="center"
                android:textSize="@dimen/login_item_size"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/sign_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/login_item_size"
                android:inputType="number"
                android:textColorHint="@color/login_tip_color"
                android:hint="@string/register_vcode_tip"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/sign_up"
            android:layout_width="120dp"
            android:layout_height="@dimen/login_item_height"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/login_btn_size"
            android:background="@drawable/image_login_button"
            android:textColor="#FFFFFFFF"
            android:text="@string/login_signup"/>
    </LinearLayout>

</LinearLayout>