<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#FFE2E1E1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:text="@string/this_function_is_only"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_activity_bg"/>

    <RelativeLayout
        android:id="@+id/type_rBtn1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:background="@drawable/btn_border_fense_vip"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_37">
        <TextView
            android:id="@+id/month_1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:layout_alignParentLeft="true"
            android:text="@string/month_1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>

        <TextView
            android:id="@+id/money_1_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_border_white"
            android:layout_toRightOf="@id/month_1"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:text="98K"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>
        <TextView
            android:id="@+id/moneyfeilv_1_txt"
            android:layout_toRightOf="@id/money_1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:text="14.4CBP"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/login_tip_color"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/type_rBtn2"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_fense_vip"
        android:layout_height="@dimen/normal_height"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_37">
        <TextView
            android:id="@+id/month_2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:layout_alignParentLeft="true"
            android:text="@string/month_3"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>

        <TextView
            android:id="@+id/money_2_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:background="@drawable/btn_border_white"
            android:layout_toRightOf="@id/month_2"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:text="168K"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>
        <TextView
            android:id="@+id/moneyfeilv_2_txt"
            android:layout_toRightOf="@id/money_2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="14.4CBP"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/login_tip_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/type_rBtn3"
        android:layout_width="match_parent"
        android:background="@drawable/btn_border_fense_vip"
        android:layout_height="@dimen/normal_height"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_37">
        <TextView
            android:id="@+id/month_3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:layout_alignParentLeft="true"
            android:text="@string/month_6"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>

        <TextView
            android:id="@+id/money_3_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_border_white"
            android:layout_toRightOf="@id/month_3"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:text="288K"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>
        <TextView
            android:id="@+id/moneyfeilv_3_txt"
            android:layout_toRightOf="@id/money_3_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="14.4CBP"
            android:textSize="@dimen/sp_11"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="@color/login_tip_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/type_rBtn4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/btn_border_fense_vip"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_37">
        <TextView
            android:id="@+id/month_4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:layout_alignParentLeft="true"
            android:text="@string/month_12"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>

        <TextView
            android:id="@+id/money_4_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_border_white"
            android:layout_toRightOf="@id/month_4"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:text="488K"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_activity_bg"/>
        <TextView
            android:id="@+id/moneyfeilv_4_txt"
            android:layout_toRightOf="@id/money_4_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="14.4CBP"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/login_tip_color"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/no_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/no"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_fense_normal"/>
        <TextView
            android:id="@+id/yes_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/yes"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_fense_normal"/>
    </LinearLayout>

</LinearLayout>