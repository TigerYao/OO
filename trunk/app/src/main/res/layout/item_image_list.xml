<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_image_item_size"
                android:background="@color/white"
                android:minHeight="@dimen/all_image_item_size"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

    <ImageView
        android:id="@+id/photo_imgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/image_add"
        android:padding="10dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/arrow_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_more_sign"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/arrow_imgView"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/photo_imgView"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dir_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dir_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#969696"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>