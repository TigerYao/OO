<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title_normal"/>

    <LinearLayout
        android:id="@+id/user_wall_type_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffE9E9EB"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/order_type_ll1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_task_item_height"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_task_item_height"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/sort_task_wall_select"
                android:text="@string/sort_task_wall1"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/order_type_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/duigou"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_type_ll2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_task_item_height"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_task_item_height"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/sort_task_wall_select"
                android:text="@string/sort_task_wall2"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/order_type_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/duigou"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_type_ll3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_task_item_height"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_task_item_height"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/sort_task_wall_select"
                android:text="@string/sort_task_wall3"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/order_type_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/duigou"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order_type_ll4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/new_task_item_height"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/new_task_item_height"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/sort_task_wall_select"
                android:text="@string/sort_task_wall4"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/order_type_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/duigou"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>