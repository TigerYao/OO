<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_EFEFF0">

    <com.taiwan.oomatcher.widget.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res/com.taiwan.oomatcher"
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@drawable/default_head"
        android:scaleType="fitXY"
        app:sriv_oval="true"
        tools:src="@drawable/image_wall_cell_header0" />

    <TextView
        android:id="@+id/tv_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/iv_photo"
        android:maxLines="1"
        android:textColor="@color/color_5C5D5D"
        android:textSize="@dimen/sp_20"
        tools:text="New York Clubing" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_title"
        android:layout_toRightOf="@+id/icon_follower"
        android:layout_toLeftOf="@+id/tv_have_time"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_A09FB5"
        android:textSize="@dimen/sp_11"
        tools:text="" />
    <ImageView
        android:id="@+id/iv_date_icon"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_12"
        android:scaleType="fitXY"
        android:src="@drawable/task_wall_date_icon" />

    <TextView
        android:id="@+id/tv_have_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_date_icon"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        tools:text="OD 09:36:24" />

    <ImageView
        android:id="@+id/icon_follower"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_toRightOf="@+id/iv_photo"
        android:scaleType="fitXY"
        android:src="@drawable/image_collection_userinfo" />

    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@+id/icon_follower"
        android:gravity="center"
        android:textColor="@color/color_A09FB5"
        android:textSize="@dimen/sp_11"
        tools:text="1500 Followers" />


    <ImageView
        android:id="@+id/icon_thumbs"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginLeft="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_toRightOf="@+id/icon_follower"
        android:scaleType="fitXY"
        android:src="@drawable/image_userinfo_thumbs" />

    <TextView
        android:id="@+id/tv_thumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_toRightOf="@+id/icon_thumbs"
        android:gravity="center"
        android:textColor="@color/color_A09FB5"
        android:textSize="@dimen/sp_11"
        tools:text="270 Thumbs" />

    <LinearLayout
        android:id="@+id/ll_start_date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_photo"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="22,October" />

        <TextView
            android:id="@+id/tv_start_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="2017" />

        <TextView
            android:id="@+id/tv_start_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="23  :  00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_end_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_photo"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="22,October" />

        <TextView
            android:id="@+id/tv_end_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="2017" />

        <TextView
            android:id="@+id/tv_end_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/color_514C53"
            android:textSize="@dimen/sp_18"
            tools:text="03  :  00" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_photo"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_toLeftOf="@+id/ll_end_content"
        android:layout_toRightOf="@+id/ll_start_date_content"
        android:gravity="center"
        android:text="@string/task_wall_to"
        android:textColor="@color/color_3A3342"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_meet_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_start_date_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/task_wall_meet_point"
        android:textColor="@color/color_3A3342"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_meet_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_start_date_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_27"
        android:maxLines="1"
        android:textColor="@color/color_A09FB5"
        android:textSize="@dimen/sp_10"
        tools:text="New York  NY,USA" />

    <TextView
        android:id="@+id/tv_add_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_meet_point_title"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_9"
        android:maxLines="1"
        android:textColor="@color/color_A09FB5"
        android:textSize="@dimen/sp_10"
        tools:text="113Ludlow  St" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_meet_point_title"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_14"
        android:maxLines="1"
        android:text="@string/my_task_list_details"
        android:textColor="@color/color_89898A"
        android:textSize="@dimen/sp_10" />
    <RelativeLayout
        android:id="@+id/ll_want_details"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/tv_add_now"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        android:background="@drawable/shape_task_wall_tab_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/money_txt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24"
                tools:text="18000K" />

            <TextView
                android:id="@+id/money_feilv_txt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/my_task_list_companions"
                android:textColor="@color/main_activity_bg"
                android:textSize="@dimen/sp_10" />
            <TextView
                android:id="@+id/money_status_txt"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/task_wall_more_details"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>